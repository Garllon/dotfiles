alias .='cd . && ls -al'
alias ..="cd .."
alias ...="cd ../.."

alias ls='ls -al'

alias code="cd ~/code"
alias dotfiles="cd ~/dotfiles"

alias be="bundle exec"
alias rbp="bundle exec rails_best_practices -e 'db/migrate'"
alias migrate="be rake db:migrate && RAILS_ENV=test be rake db:drop db:create && RAILS_ENV=test be rake db:migrate && RAILS_ENV=test wrapper_open='rubocop:disable Metrics/LineLength' wrapper_close='rubocop:enable Metrics/LineLength' bundle exec annotate -is --sort -f rdoc --force"
alias rubocop="bundle exec rubocop"

alias g="git"
alias gpl="git pl"
alias gps="git push"
alias gst="git st"
alias gplmaster="git fetch origin && git rebase origin/master"
alias refork="git fetch upstream && git checkout master && git rebase upstream/master && git push"
